<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <!-- רכיב טקסט עבור טמפרטורה מינימלית -->
    <TextView
        android:id="@+id/minTempTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min Temp: --°C" />

    <!-- רכיב טקסט עבור טמפרטורה מקסימלית -->
    <TextView
        android:id="@+id/maxTempTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Temp: --°C" />

    <!-- רכיב טקסט עבור אחוז הלחות -->
    <TextView
        android:id="@+id/humidityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity: --%" />

    <!-- רכיב טקסט עבור לחץ האוויר -->
    <TextView
        android:id="@+id/pressureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pressure: -- hPa" />

    <!-- רכיב טקסט עבור אחוז כיסוי העננים -->
    <TextView
        android:id="@+id/cloudsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clouds: --%" />

</LinearLayout>
